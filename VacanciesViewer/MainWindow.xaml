<Window x:Class="VacanciesViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VacanciesViewer"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="900" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="5">
        <TabControl>
            <TabItem Header="Вакансии с БД">
                <!-- <GroupBox Header="Группа" Margin="5,5,5,241" Padding="5" RenderTransformOrigin="0.506,0.534"> -->
                    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid>
                            <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="9,9,0,0" VerticalAlignment="Top" Width="29" Click="button_Click" Height="11"/>
                            <Label x:Name="label" VerticalAlignment ="Center" Margin="29,56,27,634" HorizontalContentAlignment="Center">
                                <TextBlock Text="{Binding ElementName= vacancyGrid, Path=CurrentItem.title}"></TextBlock>
                            </Label>
                            <RichTextBox x:Name="richTextBox" Margin="28,125,28,215">
                                <FlowDocument>
                                    <Paragraph>
                                        <TextBlock Text="sada"></TextBlock>
                                        <Run Text="{Binding ElementName=vacancyGrid, Path=CurrentItem.Id}"/>
                                    </Paragraph>
                                </FlowDocument>
                            </RichTextBox>
                            <DataGrid x:Name="vacancyGrid" Height="194"  Margin="15,518,15,0" SelectionChanged="dataGrid_SelectionChanged"
                                  HorizontalGridLinesBrush = "DarkGray" RowBackground="LightGray" AlternatingRowBackground="White"/>
                        </Grid>
                    </StackPanel>
               <!-- </GroupBox> -->
            </TabItem>
            <TabItem Header="Вакансии с сайта">
                <GroupBox Header="Группа" Margin="5" Padding="5">
                    <StackPanel>

                    </StackPanel>
                </GroupBox>
            </TabItem>
        </TabControl>
    </Grid>

</Window>

